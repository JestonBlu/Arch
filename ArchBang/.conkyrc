background yes
use_xft yes
xftfont monospace:size=9
xftalpha 1
update_interval 1.0
total_run_times 0
own_window yes
own_window_transparent yes
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_colour black
double_buffer yes
minimum_size 1 1
maximum_width 1000
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color white
default_shade_color 000000
default_outline_color d9d7d6
alignment tl
gap_x 12
gap_y 6
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale no
color1 blue
color2 gray
##############################################
#  Output
##############################################
TEXT
${font sans-serif:bold:size=8}${color1}CPU:   ${color2}$alignr${cpu cpu0}%      ${color1}Temp:   ${color2}$alignr${acpitemp}c      ${color1}RAM:   ${color2}$alignr$memperc%      ${color1}Disk Used:    ${color2}${alignr}$fs_used_perc}%      ${color1}Download:   ${color2}${alignr}${downspeedf wlp2s0}k      ${color1}Battery:   ${color2}$alignr${battery_percent}%

